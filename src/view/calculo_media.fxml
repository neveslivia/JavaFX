<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="390" prefHeight="844"
            style="-fx-background-color: linear-gradient(to bottom, #1A2980, #26D0CE);">

    <VBox alignment="center" spacing="25" layoutX="20" layoutY="140" prefWidth="350">

        <Label text="Calcule sua Média" style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0, 0, 2);"/>

        <HBox spacing="12">
            <TextField fx:id="txtNota1" promptText="Nota 1"
                       style="-fx-font-size: 18px; -fx-background-radius: 12px; -fx-border-color: transparent; -fx-background-color: white; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, #00000050, 10, 0, 0, 5);"/>

            <TextField fx:id="txtNota2" promptText="Nota 2"
                       style="-fx-font-size: 18px; -fx-background-radius: 12px; -fx-border-color: transparent; -fx-background-color: white; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, #00000050, 10, 0, 0, 5);"/>

            <TextField fx:id="txtNota3" promptText="Nota 3"
                       style="-fx-font-size: 18px; -fx-background-radius: 12px; -fx-border-color: transparent; -fx-background-color: white; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, #00000050, 10, 0, 0, 5);"/>
        </HBox>

        <Button text="Calcular Média" fx:id="btnCalcular"
                style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-padding: 12px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, black, 5, 0, 0, 3);"
                />

        <Label fx:id="lblMedia" text="" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    </VBox>

</AnchorPane>

